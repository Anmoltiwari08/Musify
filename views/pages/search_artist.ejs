<%
// search artists
const {items:searchArtistItems} = locals.searchArtists
%>

<!DOCTYPE html>
<html lang="en">
<head>

    <%- include('../layouts/head',{title: `Search | Musify`}) %>

</head>

<body>
    
        <!---   
        - # Recenly Played   
        -->    
          
    <%- include('../layouts/recently_played',{ recentlyPlayed : locals.recentlyPlayedTracks }) %>
        
        <article class="page custom-scrollbar" data-page>
        
        <!---
        - #Top app bar
        -->
        
            <%- include('../partials/top_bar', locals.currentProfile ) %>

            <!---
            - #TBottom bar
            -->

                <%- include('../partials/bottom_nav') %>

                        <!--
                        - # SEARCH FILTER LIST
                        -->

                        <%- include('../layouts/search_filter', { type:locals.type } ) %>
                                                                                 
                        <div class="main">
                            <section class="section">
                               <div class="grid-list">
                                <% searchArtistItems.forEach(({id, images,name:title,type,uri})=>{  %>

                                    <% const [image]= images || {} %>

                                    <%- include('../partials/card',{
                                       variant:'artists-card',
                                       image,
                                       type:'artist',
                                       title,
                                       text:type,
                                       link:`/artist/${id}`
                                       })  %>

                                    <% })  %>
                               </div>
    
                            <!--
                            - #apgination
                            -->
                            <%- include('../partials/pagination',locals.searchArtists) %>
    
                            </section>
                         </div>                                                                       
                        <!--
                        - #player sm
                        -->
                      
                        <%- include('../partials/player_sm') %>

                    <!--
                    - #player lg
                    -->
                    <%- include('../partials/player_lg') %>

                            <!---
                            - #Footer bar
                            -->

                            <%- include('../layouts/footer') %>
                 
        </article>
                     
</body>

</html>
