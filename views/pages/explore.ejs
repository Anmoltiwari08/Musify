<% 
// categories
 const { items:categoryItems }=locals.categories;
  %>


    <!DOCTYPE html>
    <html lang="en">

    <head>

        <%- include('../layouts/head',{title:'Explore | Musify'}) %>
        <link rel="stylesheet" href="/css/explore.css">

    </head>

    <body>

        <!---
            - # Recenly Played
            -->

        <%- include('../layouts/recently_played',{ recentlyPlayed : locals.recentlyPlayedTracks }) %>

            <article class="page custom-scrollbar" data-page>

                <!---
            - #Top app bar
            -->
            
                <%- include('../partials/top_bar',locals.currentProfile ) %>

                    <!---
                - #TBottom bar
                -->

                    <%- include('../partials/bottom_nav',{currentRoute:'/explore'} ) %>

                        <div class="main">
                            <section class="section">
                                <div class="title-wrapper">
                                    <h2 class="title-large section-title">Explore</h2>

                                </div>
                                <div class="grid-list">
                                <% categoryItems.forEach(({icons,id,name})=>{  %>
                
                                    <% const {url,height,width}= icons[0] %>
                                    
                                    <%- include('../partials/category_card',{ 
                                        url,
                                        height,
                                        width,
                                        name,
                                        id                                  
                                        }) %>

                                    <% }) %>

                                </div>
                             
                            </section>
                        </div>

                          <!--------
                          -# PAGINATION
                          --------->
                           
                          <%- include('../partials/pagination',locals.categories) %>
 
                                                  
                            <!--
                            - #player sm
                            -->
                          
                            <%- include('../partials/player_sm') %>

                        <!--
                        - #player lg
                        -->
                        <%- include('../partials/player_lg') %>


                                <!---
                                - #Footer bar
                                -->

                                <%- include('../layouts/footer') %>

            </article>

    </body>

    </html>